<Window x:Class="MegaCastings.AddClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MegaCastings"
        mc:Ignorable="d"
        Title="Ajouter un client" Height="500" Width="400">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- * signifie % -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width ="50*"/>
            <ColumnDefinition Width ="100"/>
            <ColumnDefinition Width ="200"/>
            <ColumnDefinition Width ="50*"/>
        </Grid.ColumnDefinitions>


        <TextBlock Grid.Column="1" Grid.Row="1"  Text="Nom :"/>
        <TextBlock Grid.Column="1"  Grid.Row="2" Text="Prénom :"/>
        <TextBlock Grid.Column="1"  Grid.Row="3" Text="Téléphone :"/>
        <TextBlock Grid.Column="1"  Grid.Row="4" Text="Adresse"/>
        <TextBlock Grid.Column="1"  Grid.Row="5" Text="Code postal"/>
        <TextBlock Grid.Column="1"  Grid.Row="6" Text="Ville"/>

        <TextBox x:Name="tbLastName" Grid.Row="1"  Grid.Column="2" Margin="2"/>
        <TextBox x:Name="tbFirstName" Grid.Row="2" Grid.Column="2" Margin="0,1,2,3"/>
        <!-- gauche, droite, haut, bas -->
        <TextBox x:Name="tbPhoneNumber" Grid.Row="3"  Grid.Column="2" Margin="2"/>
        <TextBox x:Name="tbAddress" Grid.Row="4" Grid.Column="2" Margin="0,1,2,3"/>
        <TextBox x:Name="tbZipCode" Grid.Row="5" Grid.Column="2" Margin="0,1,2,3"/>
        <TextBox x:Name="tbCity" Grid.Row="6"  Grid.Column="2" Margin="2"/>
   

        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" FlowDirection="RightToLeft" VerticalAlignment="Bottom">
            <Button x:Name="b_cancel" Content="Annuler" Click="b_cancel_Click"/>
            <Button x:Name="b_ok" Content="Ok" Click="b_ok_Click"/>
        </StackPanel>

    </Grid>
</Window>
